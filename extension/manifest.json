{
    "name": "FreeFlow",
    "version": "0.01",
    "manifest_version": 2,
    "description": "FreeFlow Chrome Extension",
    "permissions": ["management", "http://freeflow.tk/*", "http://*.freeflow.tk/*", "https://www.netflix.com/login", "https://auth.hulu.com/web/login", "storage", "tabs", "privacy"],

    "icons": {
        "16": "pictures/ff_logo/16.png",
        "32": "pictures/ff_logo/32.png",
        "48": "pictures/ff_logo/48.png",
        "128": "pictures/ff_logo/128.png"
    },

    "browser_action": {
        "default_popup": "startpage/popup.html",
        "default_title": "FreeFlow"
    },

    "background":{
        "scripts":["background.js"],
        "persistant":false

    }
}
